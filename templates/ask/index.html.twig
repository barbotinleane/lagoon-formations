{% extends 'base.html.twig' %}

{% block title %}
    LAGOON&reg; Piscines - Pré-inscription à la formation en ligne
{% endblock %}

{% block description %}
    Augmentez en compétences ou faites une reconversion professionnelle en vous inscrivant à notre formation certifiée Qualiopi. Vous apprendrez les techniques et matériaux d'éco-construction de piscines.
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('formationAsk') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('formationAsk') }}
{% endblock %}

{% block body %}
    <main id="corps" class="container-fluid">
        {{ form_start(form) }}

        {% if not form.vars.valid %}
            <div class="form-error">
                {{ form_errors(form) }}
            </div>
        {% endif %}

        <div class="row">
            <div class="col-12 col-md-7 d-flex flex-column order-2 order-md-1">
                <div class="row section">
                    <h1 class="mt-md-5">Pré-inscription en ligne</h1>
                    {% include 'ask/steps/reusables/list.html.twig' %}

                    {% if flow.getCurrentStepNumber() == 1 %}
                        {% include 'ask/steps/step1.html.twig' %}

                    {% elseif flow.getCurrentStepNumber() == 2 %}
                        {% include 'ask/steps/step2.html.twig' %}

                    {% elseif flow.getCurrentStepNumber() == 3 %}
                        {% include 'ask/steps/step3.html.twig' %}
                    {% endif %}
                </div>
            </div>
            <div class="col-12 col-md-5 bg-woman-in-formation h-xs-300px order-1 order-md-2"></div>
        </div>

        {{ form_end(form) }}
    </main>
{% endblock %}