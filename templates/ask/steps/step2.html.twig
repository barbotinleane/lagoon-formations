<div id="formation" class="row py-4">
    <div class="col-12 col-sm-4">
        <h3 class="baskerville size-3">Ma formation</h3>
        {% include 'ask/steps/reusables/list.html.twig' %}
    </div>

    <div class="col-12 col-sm-8 bg-white rounded-corners text-dark p-5">
        <div class="my-3">
            <div class="my-3">
                <label>Formation demandée :</label>
                <div class="text-center d-grid gap-2">
                    <div class="btn btn-dark" style="cursor:default;">
                        <strong>
                            {{ formation.libelle }}
                        </strong><br>
                        <i class="fa fa-clock-o" aria-hidden="true"></i>
                         {{ formation.duration }}<br>
                    </div>
                </div>
            </div>

            <div id="session">
                {{ form_row(form.formationSession) }}
            </div>
        </div>



        {% if flow.formData.status.getId != 1 and formation.id == 1 %}
            <div class="text-end fw-bold mb-4">
                Coût estimé :
                <div class="size-2">
                    2500 €
                </div>
            </div>
        {% endif %}

        {% include 'ask/steps/reusables/buttons.html.twig' %}
    </div>
</div>