<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{% endblock %}</title>
        <link rel="shortcut icon" href="favicon.ico" type="image/x-icon">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="{% block description %}{% endblock %}"/>
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            <script src="https://kit.fontawesome.com/43f9248d84.js" crossorigin="anonymous"></script>
        {% endblock %}
    </head>
    <body>
        <header>
            <nav class="navbar navbar-expand-lg navbar-light fixed-top bg-white p-0">
                <div class="container">
                    <a class="navbar-brand" href="{{ path('app_home') }}">
                        <picture>
                            <source srcset="{{ asset('build/images/logo.webp') }}" type="image/webp" height="40" width="130">
                            <source srcset="{{ asset('build/images/logo.png') }}" type="image/png" height="40" width="130">
                            <img
                                    src="{{ asset('build/images/logo.png') }}"
                                    alt="Logo lagoon piscines"
                                    height="40"
                                    width="130"
                            >
                        </picture>
                    </a>

                    <button
                            class="navbar-toggler"
                            type="button"
                            data-bs-toggle="collapse"
                            data-bs-target="#navbarNav"
                            aria-controls="navbarNav"
                            aria-expanded="false"
                            aria-label="Toggle navigation"
                    >
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse justify-content-end text-end" id="navbarNav">
                        <div class="nav navbar-nav pull-right">
                            <a class="nav-link active" aria-current="page" href="{{ path('app_home') }}">
                                Accueil
                            </a>
                            <a class="nav-link" href="{{ path('app_formation') }}">Nos formations</a>
                            <a class="nav-link" href="{{ path('app_about_us') }}">A propos</a>
                        </div>
                    </div>
                </div>
            </nav>
        </header>

        {% block body %}{% endblock %}

        <footer class="bg-dark text-light section-x">
            <div class="row py-5">
                <div class="col-6">
                    <ul style="list-style:none">
                        <li>
                            <a
                                    href="https://www.iubenda.com/privacy-policy/84479269"
                                    class="footer-link"
                                    title="Politique de confidentialité">
                                Politique de confidentialité
                            </a>
                            <script type="text/javascript">
                                (function (w,d) {
                                    var loader = function () {
                                        var s = d.createElement("script"),
                                            tag = d.getElementsByTagName("script")[0];
                                        s.src="https://cdn.iubenda.com/iubenda.js";
                                        tag.parentNode.insertBefore(s,tag);
                                    };
                                    if(w.addEventListener){
                                        w.addEventListener("load", loader, false);
                                    }
                                    else if(w.attachEvent){
                                        w.attachEvent("onload", loader);
                                    } else {
                                        w.onload = loader;
                                    }
                                })(window, document);
                            </script>
                        </li>
                    </ul>
                </div>

                <div class="col-6">
                    <ul style="list-style:none">
                        <li>
                            <a href="{{ path('app_about_us') }}" class="footer-link">Qui sommes nous ?</a>
                        </li>
                        <li>
                            <a href="{{ path('app_formation') }}" class="footer-link">
                                Nos formations
                            </a>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="text-center">
                <i class="fa fa-copyright" aria-hidden="true"></i>
                &nbsp;Copyright 2022 LAGOON&reg; DISTRIBUTION CORPORATION
            </div>
        </footer>
    </body>
</html>
